<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="practical1.com.practical1.MainActivity">



    <Button
        android:id="@+id/exit_button"
        android:text="@string/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view"
        android:layout_marginBottom="84dp"
        android:layout_above="@+id/exit_button"
        android:layout_toLeftOf="@+id/exit_button"
        android:layout_toStartOf="@+id/exit_button" />

    <Button
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_info"
        android:layout_alignBaseline="@+id/view_button"
        android:layout_alignBottom="@+id/view_button"
        android:layout_toRightOf="@+id/view_button"
        android:layout_toEndOf="@+id/view_button"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />
</RelativeLayout>
